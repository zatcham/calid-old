{% extends "base.html.twig" %}

{% block title %}Account Settings{% endblock %}

{% block header %}
{% endblock %}

{% block content %}
    {% if form_error is not empty %}
        <div class="alert alert-danger">{{ form_error }}</div>
    {% endif %}
    {% if form_success is not empty %}
        <div class="alert alert-success">{{ form_success }}</div>
    {% endif %}
<div class="row">
    <form id="email_form" action="" method="POST">
        <div class="input-group mb-3 row">
            <label for="uname" class="col-sm-2 col-form-label">Username:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="uname" value="{{ current_user }}" readonly>
            </div>
        </div>
        <div class="input-group mb-3 row">
            <label for="datecreated" class="col-sm-2 col-form-label">Date Created:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="datecreated" value="{{ create_date }}" readonly disabled>
            </div>
        </div>
        <div class="input-group mb-3 row">
            <label for="datecreated" class="col-sm-2 col-form-label">Password last changed:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="datecreated" value="{{ pw_change_date }}" readonly disabled>
            </div>
        </div>
        <div class="input-group mb-3 row">
            <label for="userrole" class="col-sm-2 col-form-label">User role:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="userrole" value="{{ user_role }}" readonly disabled>
            </div>
        </div>
        <div class="input-group mb-3 row">
            <label class="col-sm-2 col-form-label" for="inp-email">Email Address:</label>
            <div class="col-sm-10">
                <input class="form-control" id="inp-email" name="inp-email" type="email" value="{{ user_email }}" required>
            </div>
        </div>
        <div class="input-group mb-3 row">
            <label class="col-sm-2 col-form-label" for="inp-cpassword">Current Password:</label>
            <div class="col-sm-10">
                <input class="form-control" id="inp-cpassword" name="inp-cpassword" type="password" value="" required>
            </div>
        </div>
        <div class="input-group mb-3">
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save Changes</button>
        </div>
    </form>
    <hr />
    <div class="float-right">
        <a href="reset_pass.php" class="btn btn-secondary"><i class="fas fa-key"></i> Change Password</a>
        <a href="ui_settings.php" class="btn btn-primary"><i class="fas fa-sliders-h"></i> UI Settings</a> <!-- TODO: Build UI Settings -->
    </div>
</div>
{% endblock %}

