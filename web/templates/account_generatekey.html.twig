{% extends "base.html.twig" %}

{% block title %}Generate Sign-Up Key{% endblock %}

{% block header %}
{% endblock %}

{% block content %}
    {% if form_error is not empty %}
        <div class="alert alert-danger">{{ form_error }}</div>
    {% endif %}
    {% if form_success is not empty %}
        <div class="alert alert-success">{{ form_success }}</div>
    {% endif %}
    <div class="row">
        <form action="" method="post">
            <div class="form-group mb-3 row">
                <label class="col-sm-2 col-form-label" for="key">Key:</label>
                <div class="col-sm-10">
                    <input class="form-control" id="key" name="key" type="text" value="{{ key }}" disabled>
                    <span class="invalid-feedback d-block">{{ key_err }}</span>
                    <input id="hide" name="hide" type="hidden" value="hidden">
                </div>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-success"><i class="fas fa-key"></i> Generate</button>
            </div>
        </form>
        <hr/>
        <div class="float-right">
            <a href="users.php" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Go Back</a>
        </div>
    </div>
{% endblock %}

{% block footer %}


{% endblock %}