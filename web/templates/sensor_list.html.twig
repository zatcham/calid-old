{% extends "base.html.twig" %}

{% block title %}List Sensors{% endblock %}

{% block header %}
    <link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
{% endblock %}

{% block content %}
    {% if errors is not empty %}
        <div class="alert alert-danger">{{ errors }}</div>
    {% endif %}
    {% if no_data %}
        No data found {# TODO: change to data table to allow click #}
    {% else %}
        <table class="table" id="sensorTable">
            <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Location</th>
                <th>Data Types</th>
                <th>Last Seen</th>
                <th>API Key</th>
                <th>SW Version</th>
                <th>Show on average?</th>
                <th>Status</th>
                <th>Edit Sensor</th>
            </tr>
            </thead>
            <tbody>
            {% for sub_array in table_data %}
                <tr>
                    {% for key, value in sub_array %}
                        {% if key == "show_on_avg" %}
                            {% if value == "1" %}
                                <td>Yes</td>
                            {% else %}
                                <td>No</td>
                            {% endif %}
                        {% elseif key == "DataTypes" %}
                            {% if value == "1" %}
                                <td>Temperature</td>
                            {% elseif value == "2" %}
                                <td>Humidity</td>
                            {% elseif value == "3" %}
                                <td>UV</td>
                            {% elseif value == "1,2" %}
                                <td>Temperature, Humidity</td>
                            {% elseif value == "1,2,3" %}
                                <td>Temperature, Humidity, UV</td>
                            {% endif %}
                        {% elseif key == "SensorID" %}
                        {% else %}
                            <td>{{ value }}</td>
                        {% endif %}
                    {% endfor %}
                    <td><a href="edit_sensor.php?sensor={{ sub_array.SensorID }}" class="btn btn-secondary btn-block"><i class="fas fa-edit"></i> Edit Sensor</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

{% block footer %}
    <script>
        $(document).ready( function () {
            $('#sensorTable').DataTable();
        } );
    </script>
{% endblock %}