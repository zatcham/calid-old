{% extends "auth/base.html.twig" %}

{% block title %}Forgotten Password{% endblock %}

{% block content %}
    <div class="wrapper border rounded px-5" style="background-color: #f5f5f5;">
        <img src="../assets/calid_logo_small.png" alt="Calid Logo">
        <h2>Password recovery</h2>
        {% if success is not empty %}
            <div class="alert alert-success">{{ success }}</div>
        {% endif %}
        {% if error is not empty %}
            <div class="alert alert-danger">{{ error }}</div>
        {% endif %}
        {% if success is empty %}
        <p>Enter your email address and we will send you a link to reset your password</p>
        <form action="" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control ml-1" style="width: 20em; display: inline !important;" placeholder="Username" required autofocus>
                <span class="invalid-feedback"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block mt-3 mx-3" value="Reset Password">
                <a href="login.php" class="btn btn-success btn-block mt-3 mx-3">Return to login</a>
                <hr>
                <p class="mt-3 text-muted">Server: {{ server_name }}</p>
                <p class="mt-1 mb-3 text-muted">&copy; <script>document.write(new Date().getFullYear())</script> Zach Matcham</p>
            </div>
        </form>
    </div>
    {% endif %}
{% endblock %}