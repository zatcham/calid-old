{% extends "auth/base.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}

<div class="wrapper border rounded px-5" style="background-color: #f5f5f5;">
    <img src="../assets/calid_logo_small.png" alt="Calid Logo">
    <h2>Calid Login</h2>
    <p>Please fill in your credentials to login.</p>

    {% if login_error is not empty %}
        <div class="alert alert-danger">{{ login_error }}</div>
    {% endif %}
    {% if login_success is not empty %}
        <div class="alert alert-success">'{{ login_success }}'</div>
    {% endif %}

    <form class="form-signin" action="" method="post">
        <div class="form-group">
            <label>Username</label>
            <input type="text" name="username" class="form-control {% if username_error.name|default %}is-invalid{% endif %}" placeholder="Username" required autofocus>
            <span class="invalid-feedback">{{ username_error }}</span>
        </div>
        <div class="form-group mt-2">
            <label>Password</label>
            <input type="password" name="password" class="form-control {% if password_error.name|default %}is-invalid{% endif %}" placeholder="Password" required autofocus>
            <span class="invalid-feedback">{{ password_error }}</span>
        </div>
{#        <div class="checkbox mb-3">#}
{#            <label>#}
{#                <input type="checkbox" value="remember-me"> Remember me#}
{#            </label>#}
{#        </div>#}
        <div class="form-group mt-3">
            <input type="submit" class="btn btn-lg btn-primary btn-block mb-2" value="Login">
            <br>
            <a href="forgot_pass.php">Forgotten your password?</a>
            <br>
            <a href="register.php">Not got an account?</a>
            <hr>
            <p class="mt-2 text-muted">Server: {{ server_name }}</p>
            <p class="mt-1 mb-3 text-muted">&copy; <script>document.write(new Date().getFullYear())</script> Zach Matcham</p>
        </div>
    </form>
</div>
{% endblock %}