{% extends "auth/base.html.twig" %}

{% block title %}Reset Password{% endblock %}

{% block content %}
    <div class="wrapper border rounded px-5" style="background-color: #f5f5f5;">
        <img src="../assets/calid_logo_small.png" alt="Calid Logo">
        <h2>Reset Password</h2>
        <p>Please fill out the boxes below to reset your password</p>

        <form action="" method="post">
            <div class="form-group mb-2">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control ml-1" placeholder="Password" required>
                <span class="invalid-feedback"></span>
            </div>
            <div class="form-group mb-2">
                <label for="confirm_password">Confirm password:</label>
                <input type="password" id="confirm_password" name="confirm_password" class="form-control ml-1" placeholder="Confirm password" required>
                <span class="invalid-feedback"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block mt-3 mx-3" value="Reset password">
                <hr>
                <p class="mt-3 text-muted">Server: {{ server_name }}</p>
                <p class="mt-1 mb-3 text-muted">&copy; <script>document.write(new Date().getFullYear())</script> Zach Matcham</p>
            </div>
        </form>
    </div>
{% endblock %}